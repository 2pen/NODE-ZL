<div class="contentbar">
    <section class="content-header">
        <h1>
            下面是很多文章
            <small>这部分先抄老师的，待来日自己改</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> 日记</a></li>
            <li class="active">Content</li>
        </ol>
    </section>

    <section class="content">
        <div class="box">
            <div class="box-msg hidden">{{message}}</div>
            <div class="box-header with-border">
                <a href="/admin/news" class="btn btn-primary btn-sm">新建文章</a>
            </div>
            <div class="box-body">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>标题</th>
                            <th>作者</th>
                            <th>发布时间</th>
                            <th>功能</th>
                        </tr>

                        </tbody>
                </table>
            </div>
            <div class="box-footer clearfix">
                <ul class="pagination pagination-sm no-margin pull-right">
                    <li>
                        <a href="{{#le pageNumber 1}}?{{else}}?page={{reduce pageNumber 1}}{{/le}}"
                           aria-label="Previous"><span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    {{#times pageCount 1 pageCount}}
                        <li {{#equals pageNumber this.step}}class="active" {{/equals}}>
                            <a href="?page={{step}}{{#if recommend}}&recommend={{recommend}}{{/if}}{{#if type}}&type={{type}}{{/if}}">{{step}}</a>
                        </li>
                    {{/times}}
                    <li>
                        <a href="{{#ge pageNumber pageCount}}?page={{pageCount}}{{else}}?page={{add pageNumber 1}}{{/ge}}"
                           aria-label="Previous"><span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>





    </section>






</div>

<script src="/blog/common.js"></script>
<script src="/blog/newsListAdmin.js"></script>